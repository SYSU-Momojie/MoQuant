<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cn.momojie.moquant.api.dao.MqDailyBasicDao">

  <resultMap id="BaseResultMap" type="com.cn.momojie.moquant.api.dto.MqDailyBasic">
    <id column="ts_code" jdbcType="VARCHAR" property="tsCode" />
    <id column="date" jdbcType="VARCHAR" property="date" />
    <result column="share_name" jdbcType="VARCHAR" property="shareName" />
    <result column="is_trade_day" jdbcType="BIT" property="isTradeDay" />
    <result column="total_share" jdbcType="DECIMAL" property="totalShare" />
    <result column="close" jdbcType="DECIMAL" property="close" />
    <result column="market_value" jdbcType="DECIMAL" property="marketValue" />
    <result column="pb" jdbcType="DECIMAL" property="pb" />
    <result column="dprofit_period" jdbcType="VARCHAR" property="dprofitPeriod" />
    <result column="quarter_dprofit_yoy" jdbcType="DECIMAL" property="quarterDprofitYoy" />
    <result column="dprofit_pe" jdbcType="DECIMAL" property="dprofitPe" />
    <result column="dprofit_peg" jdbcType="DECIMAL" property="dprofitPeg" />
    <result column="grow_score" jdbcType="DECIMAL" property="growScore" />
    <result column="dividend_yields" jdbcType="DECIMAL" property="dividendYields" />
    <result column="val_score" jdbcType="DECIMAL" property="valScore" />
  </resultMap>

  <select id="selectByParam" parameterType="com.cn.momojie.moquant.api.param.MqDailyBasicParam"
          resultMap="BaseResultMap">
    SELECT
      <choose>
      <when test="onlyIndicator">
          date, dprofit_pe, pb
      </when>
      <otherwise>*</otherwise>
      </choose>
    FROM mq_daily_basic
    WHERE
      1=1
      <if test="dt != null">
          AND date=#{dt}
      </if>
      <if test="tsCode != null">
          AND ts_code = #{tsCode}
      </if>
    ORDER BY
    <choose>
      <when test="orderByDate">
          date ASC
      </when>
      <otherwise>
        ts_code ASC
      </otherwise>
    </choose>
  </select>

  <select id="selectLatestByCode"
          resultMap="BaseResultMap">
    SELECT *
    FROM mq_daily_basic
    WHERE ts_code = #{tsCode}
    ORDER BY date DESC
    LIMIT 1
  </select>

  <select id="getScoreList" parameterType="com.cn.momojie.moquant.api.param.MqShareListParam"
          resultMap="BaseResultMap">
    SELECT
      daily.ts_code,
      daily.share_name,
      <choose>
        <when test="scoreBy == 'grow_score'">
          daily.dprofit_pe,
          daily.quarter_dprofit_yoy,
          daily.dprofit_peg
        </when>
        <when test="scoreBy == 'val_score'">
          daily.dprofit_pe,
          daily.pb,
          daily.dividend_yields
        </when>
      </choose>
    FROM mq_daily_basic daily
    WHERE daily.date = #{dt} AND daily.${scoreBy} > 0
    ORDER BY
    <choose>
      <when test="orderBy == 'pe'">
        daily.dprofit_pe ASC
      </when>
      <when test="orderBy == 'yoy'">
        daily.quarter_dprofit_yoy DESC
      </when>
      <when test="orderBy == 'peg'">
        daily.dprofit_peg ASC
      </when>
      <when test="orderBy == 'pb'">
        daily.pb ASC
      </when>
      <when test="orderBy == 'dvr'">
        daily.dividend_yields ASC
      </when>
      <otherwise>
          daily.${scoreBy} DESC
      </otherwise>
    </choose>

  </select>
</mapper>