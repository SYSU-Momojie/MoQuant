<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cn.momojie.moquant.api.dao.MqDailyBasicDao">

  <resultMap id="BaseResultMap" type="com.cn.momojie.moquant.api.dto.MqDailyBasic">
    <id column="ts_code" jdbcType="VARCHAR" property="tsCode" />
    <id column="date" jdbcType="VARCHAR" property="date" />
    <result column="share_name" jdbcType="VARCHAR" property="shareName" />
    <result column="is_trade_day" jdbcType="BIT" property="isTradeDay" />
    <result column="total_share" jdbcType="DECIMAL" property="totalShare" />
    <result column="close" jdbcType="DECIMAL" property="close" />
    <result column="market_value" jdbcType="DECIMAL" property="marketValue" />
    <result column="pb" jdbcType="DECIMAL" property="pb" />
    <result column="dprofit_period" jdbcType="VARCHAR" property="dprofitPeriod" />
    <result column="dprofit_eps" jdbcType="DECIMAL" property="dprofitEps" />
    <result column="quarter_dprofit_yoy" jdbcType="DECIMAL" property="quarterDprofitYoy" />
    <result column="dprofit_pe" jdbcType="DECIMAL" property="dprofitPe" />
    <result column="dprofit_peg" jdbcType="DECIMAL" property="dprofitPeg" />
  </resultMap>

  <select id="selectByParam" parameterType="com.cn.momojie.moquant.api.param.MqDailyBasicParam"
          resultMap="BaseResultMap">
    SELECT
      <choose>
      <when test="onlyIndicator">
          date, pe, pb
      </when>
      <otherwise>*</otherwise>
      </choose>
    FROM mq_daily_basic
    WHERE
      1=1
      <if test="dt != null">
          AND date=#{dt}
      </if>
      <if test="tsCode != null">
          AND ts_code = #{tsCode}
      </if>
    ORDER BY
    <choose>
      <when test="g">
        quarter_dprofit_yoy DESC
      </when>
      <when test="peg">
        sign(dprofit_peg) DESC, sign(quarter_dprofit_yoy) DESC, dprofit_peg ASC
      </when>
      <when test="orderByDate">
          date ASC
      </when>
      <otherwise>
        ts_code ASC
      </otherwise>
    </choose>
  </select>

  <select id="selectLatestByCode"
          resultMap="BaseResultMap">
    SELECT *
    FROM mq_daily_basic
    WHERE ts_code = #{tsCode}
    ORDER BY date DESC
    LIMIT 1
  </select>
</mapper>